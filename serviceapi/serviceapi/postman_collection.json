  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Set Permissions",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"admin_token_123\",\n  \"categories\": [1],\n  \"indexes\": [10],\n  \"permissions_values\": [1, 2, 3, 4]\n}"
        },
        "url": {
          "raw": "http://localhost:3000/permissions/sets/V0Post",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["permissions", "sets", "V0Post"]
        }
      }
    },
    {
      "name": "Add Permissions",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"admin_token_123\",\n  \"categories\": [1],\n  \"indexes\": [10],\n  \"permissions_values\": [3, 4]\n}"
        },
        "url": {
          "raw": "http://localhost:3000/permissions/adds/V0Post",
