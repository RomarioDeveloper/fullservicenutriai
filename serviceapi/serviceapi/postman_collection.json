    },
    {
      "name": "List Permissions (with filters)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/permissions/lists/V0Get?token=admin_token_123&categories=1&indexes=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["permissions", "lists", "V0Get"],
          "query": [
            {
              "key": "token",
              "value": "admin_token_123"
            },
            {
              "key": "categories",
              "value": "1"
            },
            {
              "key": "indexes",
              "value": "10"
            }
          ]
        }
      }
    },
